<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale  android:fromXScale="0.01"
        android:toXScale="1"
        android:fromYScale="0.01"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fillAfter="true"
        android:duration="500"/>
    <alpha  android:fromAlpha="0.01"
			android:toAlpha="1"
			android:duration="500"/>
   <rotate android:fromDegrees="0"
       android:toDegrees="1800"
			android:pivotX="50%"
			android:pivotY="50%"
			android:duration="500"/>
   <translate android:fromXDelta="-190"
       android:toXDelta="0"
       android:fromYDelta="-190"
       android:toYDelta="0"
        android:fillAfter="true"
        android:duration="500"/>
</set>